<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:text="@string/contact_center"
            android:layout_width="wrap_content"
            android:textColor="@color/textcolor"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/phpnegroup"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="TODO" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/lable_phone"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/contact_phone"
                    android:text="@string/lable_phone"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/group_532mailgroup"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="TODO" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="Электронная почта :"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/contact_email"
                    android:text="ilhom4ik.i@gmail.com"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/timegroup"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="TODO" />
             <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="Режим работы :"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/contact_time"
                    android:text="ким кай"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
             </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>