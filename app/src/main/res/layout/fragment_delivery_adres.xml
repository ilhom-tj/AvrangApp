<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.delivery.DeliveryAdresFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="80dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="18sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="31sp"
                android:id="@+id/adres1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Адрес доставки*"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_adres1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_corner"
                android:padding="12dp"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/adres2"
                android:layout_marginTop="31sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дополнительный адрес"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_adres2"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_corner"
                android:padding="12dp"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/save_changes"
        android:layout_margin="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7sp"

        android:background="@color/red_primary"
        android:backgroundTint="@color/red_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Сохранить изменения"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>