<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="14dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_my_bonuses"
        android:layout_width="match_parent"

        app:cardElevation="0dp"
        android:layout_height="140dp"
        app:cardCornerRadius="6dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/card_background">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginStart="39dp"
                android:background="@mipmap/elipspro">
                <TextView
                    android:id="@+id/lable_my_bonus"
                    android:text="@string/demo_bonus"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_view_stroke"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <TextView
                android:text="@string/collected_bonus"
                android:textSize="20dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="39dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_avaliable_bonus"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/card_background">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginStart="39dp"
                android:background="@mipmap/elipspro">
                <TextView
                    android:id="@+id/lable_avaliable_bonus"
                    android:text="@string/available_bonus_demo"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_view_stroke"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <TextView
                android:text="@string/avaliable_bonus_lable"
                android:textSize="20dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="39dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_warning_bonus"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/warningred">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="17dp"
                android:background="@mipmap/warning">

            </FrameLayout>
            <TextView
                android:text="@string/bonus_warning_info"
                android:textSize="12dp"
                android:textColor="@color/textcolor"
                android:lineHeight="16dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="39dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:targetApi="p" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>