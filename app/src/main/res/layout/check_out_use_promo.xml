<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="14dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/promocode_lable"
        android:textColor="@color/textcolor"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/check_out_promocode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_corner"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="@color/product_secondary"
        android:textSize="18sp" />

    <Button
        android:id="@+id/check_out_accept_order"
        android:padding="14dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:text="@string/activate_promo"
        android:textSize="16sp"
        android:textColor="@color/red_primary"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
       android:background="@drawable/button_with_red_corners"
        />
</LinearLayout>