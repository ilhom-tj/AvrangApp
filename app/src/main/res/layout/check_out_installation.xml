<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="14dp"
    android:layout_marginStart="14dp"
    android:layout_marginBottom="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/choose_the_bank"
        android:textColor="@color/textcolor"
        android:textSize="14dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:background="@color/card_background"
        android:backgroundTint="@color/card_background"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Spinner
                android:id="@+id/check_out_bank_select_spiner"
            android:layout_width="match_parent"
            tools:listitem="@layout/bank_select_spinner_layout"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="12dp"
        android:text="@string/choose_the_bank"
        android:textColor="@color/textcolor"
        android:textSize="14dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:background="@color/card_background"
        android:backgroundTint="@color/card_background"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Spinner
            android:id="@+id/check_out_deadline_select_spiner"
            android:layout_width="match_parent"
            tools:listitem="@layout/dedline_select_spinner_layout"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/name"
        android:textColor="@color/textcolor"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/installation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"

        android:singleLine="true"
        android:background="@drawable/edittext_corner"
        android:padding="12dp"
        android:text=""
        android:textColor="@color/textcolor"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/phone"
        android:textColor="@color/textcolor"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/installation_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edittext_corner"
        android:padding="12dp"
        android:hint="992*****"

        android:singleLine="true"
        android:textColor="@color/textcolor"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_warning_bonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/warningred">
        <LinearLayout
            android:paddingStart="27dp"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/warning">

            </FrameLayout>
            <TextView
                android:text="@string/installation_warning"
                android:textSize="12dp"
                android:textColor="@color/textcolor"
                android:lineHeight="16dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="21dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                tools:targetApi="p" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>